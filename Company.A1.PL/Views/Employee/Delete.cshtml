@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Page</h1>
<br />
<br />
<form asp-action="Delete">

    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
  
    </div>

    <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly />

    </div>


    <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly />

    </div>

    <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly/>

    </div>

    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" class="form-control" readonly/>

    </div>
    <div class="my-3">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control"readonly />

    </div>
    <div class="my-3">
        <label asp-for="IsActive" class="form-check" readonly></label>
        <input asp-for="IsActive" class="col-form-label" />
    </div>
    <div class="my-3">
        <label asp-for="IsADeleted" class="form-check" readonly></label>
        <input asp-for="IsADeleted" class="col-form-label" />

    </div>
    <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control"readonly />
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" readonly/>
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
