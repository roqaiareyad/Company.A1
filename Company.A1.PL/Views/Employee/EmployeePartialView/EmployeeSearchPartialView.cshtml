@model IEnumerable<Employee>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Email</th>
            <th>@Html.DisplayNameFor(e => e.HiringDate)</th>
            <th>Department</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.IsDeleted == false)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@item.ImageName" height="70" width="70" class="img-fluid rounded-2" />
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Salary)
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.HiringDate.ToShortDateString()
                    </td>

                    @if (item.Department is null)
                    {
                        <td>
                            No Department
                        </td>
                    }
                    else
                    {
                        <td>@item.Department.Name</td>
                    }
                    <partial name="_ButtonPartialView" model="@item.Id.ToString()" />
                </tr>
            }
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {
        const searchBar = $('#searchInp');
        const table = $('table');

        searchBar.on('keyup', function (event) {
            var searchValue = searchBar.val();

            $.ajax({
                url: '/Employee/Search',
                type: 'Get',
                data: { Search: searchValue },
                success: function (result) {
                    table.html(result);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        });
    });
</script>