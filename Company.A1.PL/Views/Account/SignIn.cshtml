@model SignInDto
@{
	ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
	<div class="m-3 alert alert-info">
		@TempData["SuccessMessage"]
	</div>
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="SignIn">

			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		@* Sign In with google *@ 
		<a asp-action="GoogleLogin" style="display:block; margin:0 auto; text-align:center;color:white; width =50%">Sign In With Google</a>
		<br />

		<a asp-action="FacebookLogin" style="display:block; margin:0 auto; text-align:center;color:white; width =50%">Sign In With Facebook</a>
		<br />
		<p>Don't have an Account? <a asp-action="SignUp"> Create An Account!</a></p>
		<p><a asp-action="ForgetPassword"> Forgot Password?</a></p>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}