@model IEnumerable<RoleToReturn>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>

<br />
<br />

<form>
    <div class="container m-4">
        <div class="row justify-content-center">
            <div class="col-6">
                <input placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>

                    <partial name="_ButtonPartialView" model="@item.Id" />
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>
            There are no Roles :(
        </h4>
    </div>
}